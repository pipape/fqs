<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:id="@+id/back_bar"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_marginLeft="100sp"
            android:text="商品详情"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/detail_img"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/wall"/>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginLeft="20sp"
            android:text="保温水杯" />
        
        <TextView
            android:id="@+id/detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:text="左岸肖同款保温水杯  星空蓝"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/check"
                android:layout_marginLeft="30sp"
                android:text="100￥"/>
            <ImageView
                android:id="@+id/detail_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200sp"
                android:src="@drawable/favorite"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/check"
            android:text="商品经过六次鉴定，保证正品"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp">
            <TextView
                android:id="@+id/detail_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/price"
                android:layout_marginLeft="30sp"
                android:text="100￥"/>

            <Button
                android:id="@+id/add"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="10sp"
                android:background="@color/menu_green"
                android:text="立即下单" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>