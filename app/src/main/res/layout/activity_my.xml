<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/wall"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textSize="25sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_alignBottom="@id/h_back"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#474141"
                    android:text="Kamiya"/>

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_below="@id/user_name"
                    android:text="1683739441"
                    android:textColor="#95413D3D" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:src="@drawable/wel_header"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/list_idle"
            android:drawablePadding="20dp"
            android:text="账户"
            android:textColor="#2E2E2E"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/list_care"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_coupon"
            android:drawablePadding="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="养护订单"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="5dp"
            android:background="#405F5454" />

        <TextView
            android:id="@+id/list_idle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_idle"
            android:drawablePadding="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="闲置订单"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="5dp"
            android:background="#405F5454" />



        <TextView
            android:id="@+id/coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_coupon"
            android:drawablePadding="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="优惠卷"
            android:textColor="#2E2E2E"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="5dp"
            android:background="#405F5454" />



